<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="backAnchorPane" prefHeight="700.0" prefWidth="700.0" stylesheets="@EditProfileScene%20-%20Copy.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oopproject.EditProfileSceneController">
   <children>
      <AnchorPane fx:id="mainAnchorPane" layoutX="218.0" layoutY="130.0" prefHeight="439.0" prefWidth="264.0">
         <children>
            <Label fx:id="userNameHeader" layoutX="34.0" layoutY="20.0" prefHeight="38.0" prefWidth="121.0" text="Full Name:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="userName" layoutX="34.0" layoutY="58.0" prefHeight="38.0" prefWidth="195.0" />
            <Button layoutX="64.0" layoutY="114.0" mnemonicParsing="false" onAction="#changeUsername" prefHeight="38.0" prefWidth="134.0" text="Change Full Name" />
            <Button fx:id="profilePicButton" layoutX="56.0" layoutY="364.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="152.0" text="Set Profile Pic :" />
            <StackPane fx:id="backStack" layoutX="32.0" layoutY="187.0" prefHeight="150.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="profilePic" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </StackPane>
         </children>
      </AnchorPane>
      <Button fx:id="back" layoutY="1.0" mnemonicParsing="false" onAction="#switchToAccountScene" prefHeight="26.0" prefWidth="36.0" />
   </children>
</AnchorPane>
